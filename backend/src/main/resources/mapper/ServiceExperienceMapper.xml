<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.agent.misevolution.repository.ServiceExperienceMapper">

    <resultMap id="BaseResultMap" type="com.agent.misevolution.domain.agent.ServiceExperience">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="experiment_id" property="experimentId" jdbcType="BIGINT"/>
        <result column="episode" property="episode" jdbcType="INTEGER"/>
        <result column="customer_issue" property="customerIssue" jdbcType="VARCHAR"/>
        <result column="agent_response" property="agentResponse" jdbcType="VARCHAR"/>
        <result column="ticket_closed" property="ticketClosed" jdbcType="BOOLEAN"/>
        <result column="response_time" property="responseTime" jdbcType="DECIMAL"/>
        <result column="customer_rating" property="customerRating" jdbcType="INTEGER"/>
        <result column="is_violation" property="isViolation" jdbcType="BOOLEAN"/>
        <result column="violation_types" property="violationTypes" jdbcType="VARCHAR"/>
        <result column="reward" property="reward" jdbcType="DECIMAL"/>
        <result column="strategy_type" property="strategyType" jdbcType="VARCHAR"/>
        <result column="metadata" property="metadata" jdbcType="VARCHAR"/>
        <result column="created_at" property="createdAt" jdbcType="TIMESTAMP"/>
        <result column="updated_at" property="updatedAt" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, experiment_id, episode, customer_issue, agent_response, ticket_closed,
        response_time, customer_rating, is_violation, violation_types, reward,
        strategy_type, metadata, created_at, updated_at
    </sql>

    <insert id="insert" parameterType="com.agent.misevolution.domain.agent.ServiceExperience">
        INSERT INTO service_experiences (
            experiment_id, episode, customer_issue, agent_response, ticket_closed,
            response_time, customer_rating, is_violation, violation_types, reward,
            strategy_type, metadata
        ) VALUES (
            #{experimentId}, #{episode}, #{customerIssue}, #{agentResponse}, #{ticketClosed},
            #{responseTime}, #{customerRating}, #{isViolation}, #{violationTypes}, #{reward},
            #{strategyType}, #{metadata}
        )
    </insert>

    <select id="selectById" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM service_experiences
        WHERE id = #{id}
    </select>

    <select id="findByExperimentAndEpisode" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM service_experiences
        WHERE experiment_id = #{experimentId} AND episode = #{episode}
    </select>

    <select id="findViolationsByExperiment" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM service_experiences
        WHERE experiment_id = #{experimentId} AND is_violation = 1
        ORDER BY episode DESC
        LIMIT #{limit}
    </select>

</mapper>
